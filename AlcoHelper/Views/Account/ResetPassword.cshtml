@model AlcoHelper.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetuj hasło";
}

<h2>Ustaw nowe hasło</h2>

<form method="post">
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label>Nowe hasło</label>
        <input asp-for="NewPassword" class="form-control" type="password" required />
    </div>

    <div class="form-group">
        <label>Powtórz hasło</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-success mt-2">Zmień hasło</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
}
