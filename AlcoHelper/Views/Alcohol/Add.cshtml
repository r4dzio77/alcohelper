@model AlcoHelper.ViewModels.AddAlcoholViewModel

<h2>Dodaj Alkohol</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country">Kraj</label>
        <select asp-for="Country" class="form-control" asp-items="new SelectList(ViewBag.Countries)">
            <option value="">Wybierz kraj</option>
        </select>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AlcoholPercentage"></label>
        <input asp-for="AlcoholPercentage" class="form-control" step="0.1" />
        <span asp-validation-for="AlcoholPercentage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tagi</label>
        @if (ViewBag.Tags is List<AlcoHelper.Models.Tag> tags && tags.Any())
        {
            @foreach (var tag in tags)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="TagIds" value="@tag.Id"
                           @(Model.TagIds != null && Model.TagIds.Contains(tag.Id) ? "checked" : "") />
                    <label class="form-check-label">@tag.Name</label>
                </div>
            }
        }
        else
        {
            <p class="alert alert-warning">Brak dostępnych tagów. Dodaj tagi przed dodaniem alkoholu.</p>
        }
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Obrazek</label>
        <input asp-for="ImageFile" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj Alkohol</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
