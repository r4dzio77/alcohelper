@model IEnumerable<AlcoHelper.Models.Alcohol>

<h2>Alkohole oczekujące na zatwierdzenie</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Typ</th>
            <th>Kraj</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alcohol in Model)
        {
            <tr>
                <td>@alcohol.Name</td>
                <td>@alcohol.Type</td>
                <td>@alcohol.Country</td>
                <td>
                    <form asp-action="Approve" asp-controller="Alcohol" method="post">
                        <input type="hidden" name="id" value="@alcohol.Id" />
                        <button type="submit" class="btn btn-success">Zatwierdź</button>
                    </form>
                    <form asp-action="Reject" asp-controller="Alcohol" method="post">
                        <input type="hidden" name="id" value="@alcohol.Id" />
                        <button type="submit" class="btn btn-danger">Odrzuć</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
