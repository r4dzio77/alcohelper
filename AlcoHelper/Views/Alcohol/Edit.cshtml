@model AlcoHelper.ViewModels.AddAlcoholViewModel

<h2>Edytuj alkohol</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingImageUrl" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country">Kraj</label>
        <select asp-for="Country" class="form-control" asp-items="new SelectList(ViewBag.Countries)">
            <option value="">-- Wybierz kraj --</option>
        </select>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AlcoholPercentage"></label>
        <input asp-for="AlcoholPercentage" class="form-control" />
        <span asp-validation-for="AlcoholPercentage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tagi</label>
        @foreach (var tag in ViewBag.Tags as List<AlcoHelper.Models.Tag>)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="TagIds" value="@tag.Id"
                       @(Model.TagIds != null && Model.TagIds.Contains(tag.Id) ? "checked" : "") />
                <label class="form-check-label">@tag.Name</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Zdjęcie (opcjonalnie zmień)</label>
        <input asp-for="ImageFile" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
    {
        <div class="mb-3">
            <label>Aktualne zdjęcie:</label><br />
            <img src="@Model.ExistingImageUrl" alt="Zdjęcie alkoholu" style="max-width: 300px; max-height: 200px; object-fit: cover;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
