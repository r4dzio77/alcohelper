<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlcoHelper</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlcoHelper.styles.css" asp-append-version="true" />
    <!-- Dodaj Select2  -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        .navbar-nav .nav-item {
            margin: 0;
            padding: 0;
        }

        .navbar-nav.flex-grow-1 {
            flex-grow: 1;
        }

        .navbar-nav.left {
            display: flex;
        }

        .navbar-nav.right {
            display: flex;
        }

            .navbar-nav.left .nav-item,
            .navbar-nav.right .nav-item {
                margin-right: 15px;
            }
    </style>
    @RenderSection("Styles", required: false)

    @* Dodanie stylów CSS dla tagów *@
    <style>
        /* Styl dla tagów */
        .tags .badge {
            background-color: #007bff; /* Ustaw tło tagu na niebieskie */
            color: white; /* Kolor tekstu na biały */
            padding: 5px 10px;
            border-radius: 3px; /* Zaokrąglone rogi */
            margin-right: 5px; /* Odstęp między tagami */
            font-size: 14px; /* Rozmiar czcionki */
            display: inline-block;
        }

            /* Styl tagów po najechaniu myszką */
            .tags .badge:hover {
                background-color: #0056b3; /* Zmiana koloru tła po najechaniu */
                cursor: pointer; /* Zmieniamy kursor, aby pokazać, że tag jest klikalny */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AlcoHelper</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Lewa część menu -->
                    <ul class="navbar-nav left flex-grow-1">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Alcohol" asp-action="Add">Dodaj Alkohol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Review" asp-action="Index">Recenzje</a>
                            </li>
                            
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AccountSettings" asp-action="Index">Ustawienia konta</a>
                                </li>
                            


                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Dashboard">Panel Administratora</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Prawa część menu -->
                    <ul class="navbar-nav right">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Witaj, @Context.Session.GetString("UserName")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Wyloguj</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Logowanie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AlcoHelper
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>