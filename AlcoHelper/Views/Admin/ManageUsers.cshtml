@model List<AlcoHelper.Models.User>

@{
    ViewBag.Title = "Zarządzanie Użytkownikami";
}

<h2>Zarządzaj Użytkownikami</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Login</th>
            <th>Email</th>
            <th>Rola</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.RoleId</td>
            <td>
                <!-- Tu możesz potem wrzucić edycję albo usuwanie -->
                <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-warning">Edytuj</a>
                <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-danger">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>
